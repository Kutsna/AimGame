<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Game content container -->
    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <!-- Background image -->
        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wood_wall" />

        <!-- Ring overlays (order matters!) - removed, no need -->


        <!-- Your custom GameView -->
        <com.veryeasygames.aimgame.GameView
            android:id="@+id/gameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/adView" />

    </FrameLayout>

    <!-- AdMob banner at the very bottom -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5967101454574410/2297086115"/>
</LinearLayout>
