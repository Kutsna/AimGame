<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- API31+ splash: AppCompat parent, plus the new splashScreen attributes -->
    <style name="Theme.AimGame.Splash" parent="Theme.AimGame">
        <!-- Android12+ splash API: colored bg behind the animated icon -->
        <item name="windowSplashScreenBackground">#3E2723</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon_scaled</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- when that animation finishes, switch into your normal app theme -->
        <item name="postSplashScreenTheme">@style/Theme.AimGame</item>

    </style>

</resources>