<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.veryeasygames.aimgame">

    <!-- Needed for ads to load -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:icon="@mipmap/ic_aim_icon_foreground"
        android:roundIcon="@mipmap/ic_aim_icon_round">

        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource"/>

        <!-- Your AdMob App ID (test ID shown here) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5967101454574410~8186587489"/>

        <!-- Disable Firebase Analytics if youâ€™re not using it -->
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true"/>

        <meta-data
            android:name="android.webkit.WebView.Multiprocess"
            android:value="false" />

        <!-- Required to host the AdMob WebView -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:exported="false"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <!-- Splash (Portrait Only) -->
        <activity
            android:name="com.veryeasygames.aimgame.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AimGame.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Main (Portrait Only) -->
        <activity
            android:name="com.veryeasygames.aimgame.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AimGame.Splash">
        </activity>



    </application>
</manifest>
