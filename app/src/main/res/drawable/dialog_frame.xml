<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) The semi-transparent black background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88000000"/>   <!-- 50% black -->
            <corners android:radius="16dp"/>     <!-- rounded corners -->
        </shape>
    </item>

    <!-- 2) The yellow bevelled border inset by half the stroke width -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- transparent fill inside the border -->
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="6dp"
                android:color="#FFD817"/>        <!-- bright yellow -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
